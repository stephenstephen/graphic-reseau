<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Gone\Subligraphy\Block\SubligraphyLink"
                   name="subligraphy.index.link">
                <arguments>
                    <argument name="path" xsi:type="string">subligraphie/certificate/index</argument>
                    <argument name="label" xsi:type="string" translate="true">My subligraphy certificates</argument>
                    <argument name="sortOrder" xsi:type="number">10</argument>
                </arguments>
            </block>

            <!-- Remove affiliation link if customer not in it -->
            <block class="Gone\Customer\Block\Account\AffiliateLink" name="gr-navigation-affiliate">
                <arguments>
                    <argument name="path" xsi:type="string">aw_affiliate/customer</argument>
                    <argument name="label" xsi:type="string" translate="true">Affiliate Program</argument>
                    <argument name="sortOrder" xsi:type="number">15</argument>
                </arguments>
            </block>
            <referenceBlock name="customer-account-navigation-aw-aff-link" remove="true"/>
            <!-- end -->

            <!-- Remove useless link BEGIN -->
            <referenceBlock name="customer-account-navigation-product-reviews-link" remove="true"/>
            <referenceBlock name="customer-account-navigation-my-credit-cards-link" remove="true"/>
            <!-- Remove useless link END -->

            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="gr-bank-details-link">
                <arguments>
                    <argument name="path" xsi:type="string">customer/account/bankdetails</argument>
                    <argument name="label" xsi:type="string" translate="true">Our Bank Details</argument>
                    <argument name="sortOrder" xsi:type="number">230</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

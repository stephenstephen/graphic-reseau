<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="gone_checkout_sales_model_service_quote_submit_before"
                  instance="Gone\Checkout\Observer\SaveOrderBeforeSalesModelQuoteObserver"/>
    </event>
    <event name="email_order_set_template_vars_before">
        <observer name="add_custom_variable_to_order"
                  instance="Gone\Checkout\Observer\AddCustomVariableToMailObserver"/>
    </event>
    <event name="email_shipment_set_template_vars_before">
        <observer name="add_custom_variable_to_shipment"
                  instance="Gone\Checkout\Observer\AddCustomVariableToShipmentMailObserver"/>
    </event>
</config>

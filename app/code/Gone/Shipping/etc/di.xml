<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Shipping\Model\Shipping">
        <plugin disabled="false" name="Vendor_Extension_Model_Shipping" sortOrder="10"
                type="Gone\Shipping\Plugin\FilterShippingRates"/>
    </type>
    <type name="Magento\Quote\Model\ShippingMethodManagement">
        <plugin name="add_shipping_delay"
                type="Gone\Shipping\Plugin\AddShippingDelayAndSort"
                disabled="false"
                sortOrder="10"/>
    </type>
    <type name="Magento\Sales\Api\OrderManagementInterface">
        <plugin name="add_shipping_date"
                type="Gone\Shipping\Plugin\AddShippingDateToOrder"
                sortOrder="10"/>
    </type>
    <preference for="Magento\Sales\Block\Adminhtml\Order\AbstractOrder" type="Gone\Shipping\Block\Adminhtml\OrderView"/>
</config>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="cloaking_mode" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Cloaking method</label>
                <dataScope>cloaking_mode</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Gone\Cloaking\Ui\Component\Listing\Column\Cms\Page\CloakingOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>

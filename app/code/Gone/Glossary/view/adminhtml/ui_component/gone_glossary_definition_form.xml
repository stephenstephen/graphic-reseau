<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">gone_glossary_definition_form.definition_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Gone\Glossary\Block\Adminhtml\Definition\Edit\BackButton"/>
			<button name="delete" class="Gone\Glossary\Block\Adminhtml\Definition\Edit\DeleteButton"/>
			<button name="save" class="Gone\Glossary\Block\Adminhtml\Definition\Edit\SaveButton"/>
			<button name="save_and_continue" class="Gone\Glossary\Block\Adminhtml\Definition\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>gone_glossary_definition_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>gone_glossary_definition_form.definition_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="definition_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="definition_form_data_source" class="Gone\Glossary\Model\Definition\DataProvider">
			<settings>
				<requestFieldName>definition_id</requestFieldName>
				<primaryFieldName>definition_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="status" sortOrder="30" formElement="checkbox">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Definition</item>
					<item name="default" xsi:type="number">1</item>
				</item>
			</argument>
			<settings>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
				<dataType>boolean</dataType>
				<dataScope>status</dataScope>
				<label translate="true">Status</label>
			</settings>
			<formElements>
				<checkbox>
					<settings>
						<valueMap>
							<map name="false" xsi:type="string">0</map>
							<map name="true" xsi:type="string">1</map>
						</valueMap>
						<prefer>toggle</prefer>
					</settings>
				</checkbox>
			</formElements>
		</field>
		<field name="text" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Definition</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Text</label>
				<dataScope>text</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="case_sensible" formElement="checkbox" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Definition</item>
					<item name="default" xsi:type="number">0</item>
				</item>
			</argument>
			<settings>
				<dataType>boolean</dataType>
				<label translate="true">Case sensible</label>
				<dataScope>case_sensible</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
				<checkbox>
					<settings>
						<valueMap>
							<map name="false" xsi:type="string">0</map>
							<map name="true" xsi:type="string">1</map>
						</valueMap>
						<prefer>toggle</prefer>
					</settings>
				</checkbox>
			</formElements>
		</field>
		<field name="description" sortOrder="20" template="ui/form/field" formElement="wysiwyg">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Definition</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Description</label>
				<dataScope>description</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
				<wysiwyg>
					<settings>
                        <rows>5</rows>
						<wysiwyg>true</wysiwyg>
					</settings>
				</wysiwyg>
			</formElements>
		</field>
	</fieldset>
</form>

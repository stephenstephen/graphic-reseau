<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">gone_glossary_definition_listing.gone_glossary_definition_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>gone_glossary_definition_columns</spinner>
		<deps>
			<dep>gone_glossary_definition_listing.gone_glossary_definition_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new Definition</label>
			</button>
		</buttons>
	</settings>
	<dataSource name="gone_glossary_definition_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">definition_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Gone_Glossary::Definition</aclResource>
		<dataProvider name="gone_glossary_definition_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>definition_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="gone_glossary_definition_columns">
		<selectionsColumn name="ids">
			<settings>
				<indexField>definition_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="definition_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="text">
			<settings>
				<filter>text</filter>
				<label translate="true">Text</label>
			</settings>
		</column>
		<column name="status" component="Magento_Ui/js/grid/columns/select">
			<settings>
				<options class="Magento\Cms\Model\Block\Source\IsActive"/>
				<filter>select</filter>
				<dataType>select</dataType>
				<label translate="true">Status</label>
			</settings>
		</column>
		<column name="case_sensible" component="Magento_Ui/js/grid/columns/select">
			<settings>
				<options class="Magento\Config\Model\Config\Source\Yesno"/>
				<filter>select</filter>
				<dataType>select</dataType>
				<label translate="true">Case sensible</label>
			</settings>
		</column>
		<column name="description">
			<settings>
				<filter>text</filter>
				<label translate="true">Description</label>
			</settings>
		</column>
		<actionsColumn name="actions" class="Gone\Glossary\Ui\Component\Listing\Column\DefinitionActions">
			<settings>
				<indexField>definition_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
	</columns>
</listing>

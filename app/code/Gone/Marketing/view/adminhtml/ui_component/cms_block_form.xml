<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="segments_assignation" sortOrder="20" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="notice" xsi:type="string" translate="true">
                        If "All customers" is set with others segments, block will be visible to ALL Customers anyway.
                        List of segments must strictly equals List of segments for customer to display the block.
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Customer segmentation</label>
                <dataScope>segments_assignation</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Gone\Marketing\Ui\Column\Cms\Block\CmsCustomerSegments"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>

</form>

<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="sogecommerce_rest_api" type="host">https://api-sogecommerce.societegenerale.eu/api-payment/</value>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="sogecommerce_logo_url" type="host">https://sogecommerce.societegenerale.eu/static/latest/images/type-carte/</value>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
                <value id="sogecommerce_gateway" type="host">https://sogecommerce.societegenerale.eu/vads-payment/</value>
                <value id="data_image" type="host">data:</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="sogecommerce_gateway" type="host">https://sogecommerce.societegenerale.eu/vads-payment/</value>
                <value id="sogecommerce_rest_api" type="host">https://api-sogecommerce.societegenerale.eu/api-payment/</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="sogecommerce_gateway" type="host">https://sogecommerce.societegenerale.eu/vads-payment/</value>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="sogecommerce_gateway" type="host">https://sogecommerce.societegenerale.eu/vads-payment/</value>
                <value id="sogecommerce_rest_api" type="host">https://api-sogecommerce.societegenerale.eu/api-payment/</value>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
            </values>
        </policy>
        <policy id="default-src">
            <values>
                <value id="sogecommerce_gateway" type="host">https://sogecommerce.societegenerale.eu/vads-payment/</value>
                <value id="sogecommerce_rest_api" type="host">https://api-sogecommerce.societegenerale.eu/api-payment/</value>
                <value id="sogecommerce_rest_static_ressources" type="host">https://api-sogecommerce.societegenerale.eu/static/</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
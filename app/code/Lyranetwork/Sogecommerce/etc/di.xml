<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Lyranetwork\Sogecommerce\Model\Logger\Handler\Sogecommerce">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>

    <type name="Lyranetwork\Sogecommerce\Model\Logger\Sogecommerce">
        <arguments>
            <argument name="name" xsi:type="string">sogecommerce</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="debug" xsi:type="object">Lyranetwork\Sogecommerce\Model\Logger\Handler\Sogecommerce</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Payment\Model\Info">
        <arguments>
            <argument name="paymentData" xsi:type="object">Lyranetwork\Sogecommerce\Helper\Payment\Data</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\App\Request\CsrfValidator">
        <plugin name="sogecommerce_skip_csrf_validator" type="Lyranetwork\Sogecommerce\Controller\Plugin\CsrfValidator" />
    </type>

    <type name="Magento\Backend\App\Request\BackendValidator">
        <plugin name="sogecommerce_skip_backend_csrf_validator" type="Lyranetwork\Sogecommerce\Controller\Plugin\CsrfValidator" />
    </type>

    <type name="Magento\Framework\Session\SessionStartChecker">
        <plugin name="sogecommerce_session_checker" type="Lyranetwork\Sogecommerce\Controller\Plugin\SessionChecker" />
    </type>

    <type name="Magento\Framework\View\Asset\Minification">
        <plugin name="sogecommerce_exclude_js" type="Lyranetwork\Sogecommerce\Controller\Plugin\JsExcluder" />
    </type>
</config>
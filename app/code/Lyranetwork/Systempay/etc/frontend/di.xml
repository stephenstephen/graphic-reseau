<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Payment\Model\CcGenericConfigProvider">
        <arguments>
            <argument name="methodCodes" xsi:type="array">
                <item name="systempay_standard" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_STANDARD</item>
                <item name="systempay_multi" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_MULTI</item>
                <item name="systempay_gift" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_GIFT</item>
                <item name="systempay_choozeo" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_CHOOZEO</item>
                <item name="systempay_oney" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_ONEY</item>
                <item name="systempay_fullcb" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_FULLCB</item>
                <item name="systempay_sepa" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_SEPA</item>
                <item name="systempay_paypal" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_PAYPAL</item>
                <item name="systempay_franfinance" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_FRANFINANCE</item>
                <item name="systempay_other" xsi:type="const">Lyranetwork\Systempay\Helper\Data::METHOD_OTHER</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="systempay_standard_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\StandardConfigProvider</item>
                <item name="systempay_multi_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\MultiConfigProvider</item>
                <item name="systempay_gift_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\GiftConfigProvider</item>
                <item name="systempay_choozeo_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\ChoozeoConfigProvider</item>
                <item name="systempay_oney_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\OneyConfigProvider</item>
                <item name="systempay_fullcb_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\FullcbConfigProvider</item>
                <item name="systempay_sepa_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\SepaConfigProvider</item>
                <item name="systempay_paypal_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\PaypalConfigProvider</item>
                <item name="systempay_franfinance_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\FranfinanceConfigProvider</item>
                <item name="systempay_other_config_provider" xsi:type="object">Lyranetwork\Systempay\Model\OtherConfigProvider</item>
            </argument>
        </arguments>
    </type>
</config>
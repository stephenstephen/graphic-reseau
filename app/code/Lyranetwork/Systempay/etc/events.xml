<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_quote_payment_save_before">
        <observer name="systempay_update_quote_multi_payment" instance="Lyranetwork\Systempay\Observer\UpdateMultiPaymentObserver" />
        <observer name="systempay_update_quote_other_payment" instance="Lyranetwork\Systempay\Observer\UpdateOtherPaymentObserver" />
    </event>
    <event name="sales_order_payment_save_before">
        <observer name="systempay_update_order_multi_payment" instance="Lyranetwork\Systempay\Observer\UpdateMultiPaymentObserver" />
        <observer name="systempay_update_order_other_payment" instance="Lyranetwork\Systempay\Observer\UpdateOtherPaymentObserver" />
    </event>
</config>
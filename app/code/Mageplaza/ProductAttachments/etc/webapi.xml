<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="V1/mpProductAttachment/mine/download/:fileId/:productId" method="GET">
        <service class="Mageplaza\ProductAttachments\Api\ProductAttachmentsRepositoryInterface" method="mineDownloadFile"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>
    <route url="V1/mpProductAttachment/download/:fileId/:productId" method="GET">
        <service class="Mageplaza\ProductAttachments\Api\ProductAttachmentsRepositoryInterface" method="guestDownloadFile"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>

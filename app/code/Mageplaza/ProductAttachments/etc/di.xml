<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--Grid collection-->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="mageplaza_productattachments_file_listing_data_source" xsi:type="string">Mageplaza\ProductAttachments\Model\ResourceModel\File\Grid\Collection</item>
                <item name="mageplaza_productattachments_log_listing_data_source" xsi:type="string">Mageplaza\ProductAttachments\Model\ResourceModel\Log\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\ImportExport\Controller\Adminhtml\Import\Download">
        <plugin name="mp_attachments_download_sample" type="Mageplaza\ProductAttachments\Plugin\Controller\Import\Download" sortOrder="100"/>
    </type>
    <type name="Magento\Catalog\Api\ProductRepositoryInterface">
        <plugin name="mp_attachments_api_get_files_products" type="Mageplaza\ProductAttachments\Plugin\Api\Model\GetAttachment" sortOrder="101"/>
    </type>
    <preference for="Mageplaza\ProductAttachments\Api\ProductAttachmentsRepositoryInterface" type="Mageplaza\ProductAttachments\Model\Api\ProductAttachmentsRepository" />
</config>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <head>
        <css src="Mageplaza_ProductAttachments::css/style.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\ProductAttachments\Block\Adminhtml\File\Edit\Tab\File\Icon" template="Mageplaza_ProductAttachments::edit/tab/file/icon.phtml" name="mp.file.form.before" as="mp_form_before"/>
            <block class="Mageplaza\ProductAttachments\Block\Adminhtml\File\Edit" name="mageplaza_productattachments_file_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Mageplaza\ProductAttachments\Block\Adminhtml\File\Edit\Tabs" name="mageplaza_productattachments_file_tabs">
                <block class="Mageplaza\ProductAttachments\Block\Adminhtml\File\Edit\Tab\File" name="mageplaza_productattachments_file_edit_tab_file"/>
                <block class="Mageplaza\ProductAttachments\Block\Adminhtml\File\Edit\Tab\Conditions" name="mageplaza_productattachments_file_edit_tab_condition">
                    <block class="Magento\Backend\Block\Template" name="product_filter_condition" template="Mageplaza_ProductAttachments::productfilter/conditions.phtml"/>
                </block>
                <action method="addTab">
                    <argument name="name" xsi:type="string">file</argument>
                    <argument name="block" xsi:type="string">mageplaza_productattachments_file_edit_tab_file</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">condition</argument>
                    <argument name="block" xsi:type="string">mageplaza_productattachments_file_edit_tab_condition</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>

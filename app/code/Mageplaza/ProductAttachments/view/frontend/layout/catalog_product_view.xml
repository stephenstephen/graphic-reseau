<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Mageplaza\ProductAttachments\Block\Product\Attachments" name="mpattachments.tab" as="tab"
                   template="Mageplaza_ProductAttachments::product/display/tab.phtml" group="detailed_info" ifconfig="productattachments/general/enabled"/>
        </referenceBlock>
        <referenceContainer name="product.info.main">
            <block class="Mageplaza\ProductAttachments\Block\Product\Attachments" name="mpattachments.product.attachments" as="mpattachments"
                   after="product.info" template="Mageplaza_ProductAttachments::product/attachments.phtml" ifconfig="productattachments/general/enabled">
                <block class="Mageplaza\ProductAttachments\Block\Product\Display\Inline" name="mpattachments.inline" as="inline"/>
            </block>
        </referenceContainer>
        <referenceContainer name="sidebar.main">
            <block class="Mageplaza\ProductAttachments\Block\Product\Attachments" name="mpattachments.sidebar" as="sidebar"
                   template="Mageplaza_ProductAttachments::product/display/sidebar.phtml" ifconfig="productattachments/general/enabled"/>
        </referenceContainer>
    </body>
</page>
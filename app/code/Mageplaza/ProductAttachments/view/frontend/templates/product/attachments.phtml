/** @var \Mageplaza\ProductAttachments\Block\Product\Attachments $block */
$displayType      = $block->getDisplayTypes();
$canShowUnderCart = in_array(
    \Mageplaza\ProductAttachments\Model\Config\Source\System\ShowOn::INLINE,
    $displayType,
    true
);
if ($canShowUnderCart) : ?>
    <div class="mp-attachment-container under-cart">
        <h2><?= /* @noEscape */ $block->getTitle() ?></h2>
        <?= $block->getChildHtml('inline') ?>
    </div>
    <script>
        require(["jquery",], function($){
            $(document).ready(function () {
                if($('.product-options-bottom').length){
                    $('.mp-attachment-container.under-cart').appendTo($('.product-add-form'));
                }
            });
        });
    </script>
<?php endif; ?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mautic_cron_status.ced_mautic_cron_status_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>mautic_cron_status_columns</spinner>
        <deps>
            <dep>mautic_cron_status.ced_mautic_cron_status_data_source</dep>
        </deps>
    </settings>
    <dataSource name="ced_mautic_cron_status_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="indexField" xsi:type="string">schedule_id</param>
            </storageConfig>
        </settings>
        <aclResource>Ced_MauticIntegration::cron_status</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider"
                      name="ced_mautic_cron_status_data_source">
            <settings>
                <requestFieldName>schedule_id</requestFieldName>
                <primaryFieldName>main_table.schedule_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="mautic_cron_status_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">mautic_cron_status.mautic_cron_status.mautic_cron_status_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">view</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <column name="created_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="job_code"
                component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Ced\MauticIntegration\Model\Source\JobCodes"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Jobs</label>
            </settings>
        </column>
        <column name="status"
                component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Ced\MauticIntegration\Model\Source\CronStatus"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="messages">
            <settings>
                <filter>text</filter>
                <label translate="true">Message</label>
            </settings>
        </column>
        <column name="scheduled_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Scheduled At</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="executed_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Executed At</label>
            </settings>
        </column>
        <column name="finished_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Finished At</label>
            </settings>
        </column>
    </columns>
</listing>

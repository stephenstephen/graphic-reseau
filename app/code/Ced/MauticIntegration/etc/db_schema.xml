<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <!-- Mautic Error Log Table -->
    <table name="mautic_ced_error_log" resource="default" engine="innodb" comment="CED Error Log">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Log ID"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Log Creation Time"/>
        <column xsi:type="varchar" name="request_url" nullable="true" length="255" comment="Request Url"/>
        <column xsi:type="varchar" name="request_type" nullable="true" length="16" comment="Request Type"/>
        <column xsi:type="mediumtext" name="request_params" nullable="true" comment="Request Params"/>
        <column xsi:type="smallint" name="response_code" padding="6" unsigned="false" nullable="true" identity="false" default="0" comment="Response Code"/>
        <column xsi:type="mediumtext" name="response" nullable="true" comment="Response (json_body)"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>

    <!-- Mautic Table -->
    <table name="ced_mautic" resource="default" engine="innodb" comment="CED Mautic">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="entity_type" length="255"  nullable="false"  comment="Type"/>
        <column xsi:type="varchar" name="code" nullable="false" length="255" comment="Code"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="smallint" name="is_required" nullable="false" identity="false"  comment="Is Required"/>
        <column xsi:type="int" name="mautic_id" padding="6" unsigned="true" nullable="false" identity="false"  comment="Mautic Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CED_MAUTIC_ENTITY_TYPE_CODE">
            <column name="entity_type"/>
            <column name="code"/>
        </constraint>
    </table>
</schema>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="ced_mautic_abandoned_cart" instance="Ced\MauticIntegration\Cron\AbandonedCart" method="execute">
                <config_path>mautic_integration/mautic_abandoned_cart/abandoned_cart_cron_time</config_path>
        </job>
        <job name="ced_mautic_customer_export" instance="Ced\MauticIntegration\Cron\ExportCustomers" method="execute">
            <config_path>mautic_integration/mautic_customer_export/cron_time</config_path>
        </job>
         <job name="ced_mautic_delete_error_log" instance="Ced\MauticIntegration\Cron\Delete" method="deleteErrorLog">
            <schedule>5 0 * * *</schedule>
        </job>
    </group>
</config>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_save_after">
        <observer name="mautic_customer_save_after" instance="Ced\MauticIntegration\Observer\Customer\MauticCreateUpdateCustomers"/>
    </event>
    <event name="sales_order_save_after">
        <observer name="mautic_sales_order_save_after" instance="Ced\MauticIntegration\Observer\Order\MauticCreateUpdateOrders"/>
    </event>
    <event name="checkout_submit_all_after">
        <observer name="mautic_checkout_submit_all_after" instance="Ced\MauticIntegration\Observer\Order\MauticCheckoutOrders"/>
    </event>
    <event name="sales_quote_remove_item">
        <observer name="mautic_sales_quote_remove_item" instance="Ced\MauticIntegration\Observer\Quote\MauticQuoteItemRemove"/>
    </event>
    <event name="newsletter_subscriber_save_after">
        <observer name="mautic_newsletter_subscriber_save_after" instance="Ced\MauticIntegration\Observer\Customer\SubscriberSaveAfter"/>
    </event>

</config>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <amasty_acart>
            <general>
                <abandoned_gap>10</abandoned_gap>
                <eea_countries>AT,BE,BG,HR,CY,CZ,DK,EE,FI,FR,DE,GR,HU,IS,IE,IT,LV,LI,LT,LU,MT,NL,NO,PL,PT,RO,SK,SI,ES,SE,GB,CH</eea_countries>
                <customer_coupon>0</customer_coupon>
                <send_onetime>1</send_onetime>
                <history_clean_days>180</history_clean_days>
                <disable_logging_for_guests>0</disable_logging_for_guests>
                <auto_login_enable>1</auto_login_enable>
            </general>
            <email_templates>
                <sender_name>Owner</sender_name>
                <sender_email_identity>general</sender_email_identity>
                <only_customers>0</only_customers>
                <emails_to_newsletter_subscribers_only>0</emails_to_newsletter_subscribers_only>
                <products_qty>0</products_qty>
            </email_templates>
            <testing>
                <safe_mode>0</safe_mode>
                <recipient_email></recipient_email>
            </testing>
        </amasty_acart>
    </default>
</config>

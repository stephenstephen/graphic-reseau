            <group id="formating_options" translate="label" type="text" sortOrder="3" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>Text Formating Options</label>
                <field id="product_title" type="text" translate="label" sortOrder="1" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Product Title Color</label>
                    <comment><![CDATA[Background color]]></comment>
                    <frontend_model>Magedelight\Productpdf\Block\Color</frontend_model>
                </field>
                <field id="link_color" type="text" translate="label" sortOrder="2" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Links Color</label>
                    <frontend_model>Magedelight\Productpdf\Block\Color</frontend_model>
                </field>
                <field id="heading_color" type="text" translate="label" sortOrder="3" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Attribute Heading Color</label>
                    <frontend_model>Magedelight\Productpdf\Block\Color</frontend_model>
                </field>
            </group>
            <group id="header_footer" translate="label" type="text" sortOrder="4" showInDefault="1" showInStore="1" showInWebsite="1">
                <label>PDF Document Header / Footer Configuration</label>
                <field id="pdf_header_image" type="image" sortOrder="1" translate="label" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Header Logo</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
                    <upload_dir config="system/filesystem/media" scope_info="1">theme/productpdf/header_logo</upload_dir>
                    <base_url type="media" scope_info="1">theme/productpdf/header_logo</base_url>
                    <comment><![CDATA[Please upload jpeg, jpg, gif or png files only.]]></comment>
                </field>
                <field id="pdf_footer_text" type="textarea" translate="label" sortOrder="2" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Footer Text</label>
                    <comment><![CDATA[Maximum 550 characters allowed in this field.]]></comment>
                </field>
            </group>
        </section>
    </system>
</config>

